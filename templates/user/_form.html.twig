{% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
{{ form_start(form, {'attr': {'class': 'mt-4 pt-2','novalidate': 'novalidate'}}) }}
<div class="row pull-center">
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.prenom) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.nom) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
</div>
<div class="form-floating form-floating-custom mb-3">
    {{ form_row(form.date_naissance) }}
    <div class="form-floating-icon">
        <i class="uil uil-envelope-alt"></i>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.numTel) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.adresse) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
</div>
<div class="form-floating form-floating-custom mb-3">
    {{ form_row(form.role) }}
    <div class="form-floating-icon">
        <i class="uil uil-envelope-alt"></i>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.email) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating form-floating-custom mb-3">
            {{ form_row(form.password) }}
            <div class="form-floating-icon">
                <i class="uil uil-user"></i>
            </div>
        </div>
    </div>
</div>
<div class="mt-3">
    <button class="btn btn-primary w-100" type="submit">Signup</button>
</div>

<div class="mt-4 pt-3 text-center">
    <p class="text-muted mb-0">Already have an account ? <a href="{{path('app_login')}}" class="fw-semibold text-decoration-underline"> Login </a> </p>
</div>
{% if form_errors(form) %}
    <div class="error-message">
        {{ form_errors(form) }}
    </div>
{% endif %}
{{ form_end(form) }}
