
{% extends 'baseBack.html.twig' %}

{% block tableForm %}

	<div class="main-content">

		<div class="page-content">
			<div class="container-fluid">
				<br>
				<br>
				<div class="row">

					<div class="text-left mb-7">
						<br>
						<h5>Les domaines</h5>
					</div>
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">

								<section class="section">
									<div class="row">
										<div class="d-flex justify-content-between align-items-center mt-4">
											<div>

												<a href="{{ path('app_type_evenement_new') }}" class="btn btn-primary">
													<i class="uil uil-plus me-1"></i>
													Ajout domaine</a>
											</div>
										</div>
										<!-- Default Table -->
										<table class="table">
											<thead>
												<tr>
													<th scope="col">#ID</th>
													<th scope="col" class="text-center">Domaine</th>
													<th scope="col" class="text-right"></th>
												</tr>
											</thead>
											<tbody>
												{% for type_evenement in type_evenements %}
													<tr>
														<td>{{ type_evenement.id }}</td>
														<td class="text-center">{{ type_evenement.domaine }}</td>
														<td class="text-end">
															<a href="{{ path('app_type_evenement_edit', {'id': type_evenement.id}) }}">
																<button type="button" class="btn btn-success pull-center">
																	<i class="bi bi-pencil"></i>
																</button>
															</a>

															<button onclick="confirmRemoveItem({{type_evenement.id}})" type="button" class="btn btn-danger">
																<i class="bi bi-trash"></i>
															</button>
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
										<!-- End Default Table Example -->
									</div>
								</section>


								<!-- end card -->
							</div>
							<!-- end col -->
						</div>
						<!-- end row -->
					</div>
					<!-- container-fluid -->
				</div>
				<!-- End Page-content -->


			</div>
			<div></div>
<script>
	function confirmRemoveItem(itemId) {
Swal.fire({
title: 'Vous etes sur?',
text: 'Vous ne pourrez pas récupérer cet domaine!',
icon: 'warning',
showCancelButton: true,
confirmButtonColor: '#3085d6',
cancelButtonColor: '#d33',
confirmButtonText: 'oui, supprimer!'
}).then((result) => {
if (result.isConfirmed) {
window.location.href = '/type/evenement/remove/' + itemId;
}
});
}
</script>
		{% endblock %}
