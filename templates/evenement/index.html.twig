{% extends 'baseBack.html.twig' %}


{% block tableForm %}



	<div class="main-content">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="text-left mb-7">
								<br>
								<h5>Les evenements</h5>
							</div>

							<div class="col-md-3">
								<br>

								<div class="mb-3">
									<a href="{{ path('app_evenement_new') }}" class="btn btn-light">
										<i class="uil uil-plus me-1"></i>
										Ajouter nouveau
									</a>
								</div>
							</div>
							<div class="col-md-9">
								<br>
								<div class="d-flex flex-wrap align-items-start justify-content-md-end gap-2 mb-3">
									<div class="search-box ">
										<div class="position-relative">
											<input id="search" type="text" placeholder="search" class="pack-search-input"/>
											<i class="uil uil-search search-icon"></i>
										</div>
									</div>
								</div>

							</div>
						</div>

						<div class="tab-pane" id="grid-complete" role="tabpanel">
							<div class="row">
								{% for evenement in evenements|reverse %}

									<div class="col-xl-4 col-sm-7">
										<div class="card">

											<div class="card-body pb-5 ">
												<br>
												<div class="d-flex justify-content-end align-items-center">
													<a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">
														<button type="button" class="btn btn-success pull-center">
															<i class="bi bi-pencil"></i>
														</button>
													</a>
													&nbsp;
													<button onclick="confirmRemoveItem({{evenement.id}})" type="button" class="btn btn-danger">
														<i class="bi bi-trash"></i>
													</button>
												</div>
												<div class="d-flex align-items-start mb-3">

													<div class="flex-grow-1">

														<div class="avatar">
															<br>
															<img class="d-block img-fluid mb-1 mx-auto" src="{{ asset('uploads/images/' ~ evenement.image) }}" alt="">
														</div>
													</div>
												</div>
												<div class="pt-2">
													<h5 class="font-size-30 mb-1 text-truncate">
														<a href="projects-overview.html" class="text-dark">{{ evenement.nomEv }}</a>
													</h5>
													<p>
														L'evenement<strong>
															{{ evenement.nomEv }}
														</strong>
														sera le
														{{ evenement.dateEv ? evenement.dateEv|date('Y-m-d') : '' }}
														a
														{{ evenement.heureEv }}H au
														{{ evenement.emplacement }},{{ evenement.region }}
														.</p>

												</div>
											
											
											</div>
										</div>
									</div>

								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


