{% extends 'baseBack.html.twig' %}

{% block tableForm %}

	<div class="main-content">

		<div class="page-content">
			<div class="container-fluid">
				<br>
				<br>
				<div class="row">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">
								<div>

									<div class="d-flex justify-content-between align-items-center mt-4">
										<a href="{{ path('app_evenement_index') }}">
											<button type="button" class="btn btn-primary w-sm ms-auto">Liste des evenement</button>
										</a>
										<a href="{{ path('app_type_evenement_index') }}">
											<button type="button" class="btn btn-primary w-sm me-auto">Les domaines</button>
										</a>
									</div>


									<div class="wizard-tab">
										<div class="text-center mb-4">
											<h5>Ajout un nouveau Evenement</h5>
											<p class="card-title-desc">Remplissez toutes les informations ci-dessous</p>
										</div>

										<div>
											{{ form_start(form) }}
											<div class="mb-3">
												{{ form_label(form.nom_ev, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
												{{ form_widget(form.nom_ev, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.nom_ev) }}
											</div>

											<div class="mb-3">
												{{ form_label(form.emplacement, 'Emplacement', {'label_attr': {'class': 'form-label'}}) }}
												{{ form_widget(form.emplacement, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.emplacement) }}
											</div>

											<div class="mb-3">
												{{ form_label(form.heure_ev, "Heure d'evenement", {'label_attr': {'class': 'form-label'}}) }}
												{{ form_widget(form.heure_ev, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.heure_ev) }}
											</div>

											<div class="mb-3">
												{{ form_label(form.date_ev, 'Date ', {'date_attr': {'class': 'form-date'}}) }}
												{{ form_widget(form.date_ev, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.date_ev) }}
											</div>

											<div class="mb-3">
												{{ form_label(form.region, 'Region', {'label_attr': {'class': 'form-label'}}) }}
												{{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.region) }}
											</div>


											<div>
												<div class="mb-3">
													{{ form_label(form.id_type, 'Domaine ', {'label_attr': {'class': 'form-label'}}) }}
													{{ form_widget(form.id_type, {'attr': {'class': 'form-select shadow-none'}}) }}
													{{ form_errors(form.id_type) }}
												</div>

											</div>
											<div class="wizard-tab">
												{{ form_label(form.image, 'Choose an image') }}
												{{ form_widget(form.image, { 'attr': { 'class': 'form-control', 'id': 'formFile' } }) }}
											</div>


											<div class="d-flex align-items-start gap-3 mt-4">
												<button type="submit" class="btn btn-primary w-sm ms-auto">{{ button_label|default('Ajouter') }}</button>
											</div>
											{{form_end(form  , )   }}
										</div>
									</div>
									<!-- end card body -->
								</div>
								<!-- end card -->
							</div>
							<!-- end col -->
						</div>
						<!-- end row -->
					</div>
					<!-- container-fluid -->
				</div>
				<!-- End Page-content -->


			</div>
		</div>
	</div>
{% endblock %}
